{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2017",
      "DOM"
    ],
    "module": "commonjs",
    "noEmitHelpers": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "compileOnSave": false,
  "buildOnSave": false
}